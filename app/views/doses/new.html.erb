<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h1>New dose</h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit "Add dose", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
