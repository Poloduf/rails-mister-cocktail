<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>
        <%= @cocktail.name %>
      </h1>

      <h2>Doses</h2>

      <ul>
        <% @doses.each do |dose| %>
          <li>
            <%= dose.description %> of <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>
      </ul>

      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>

